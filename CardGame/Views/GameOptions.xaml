        <Button Content="New Game" HorizontalAlignment="Center" Margin="0,84,0,0" VerticalAlignment="Top" Height="43" Width="252" Click="NewGame"/>
        <Button Content="Open Game" HorizontalAlignment="Center" Margin="0,147,0,0" VerticalAlignment="Top" Height="43" Width="252"/>
        <Button Content="Save Game" HorizontalAlignment="Center" Margin="0,208,0,0" VerticalAlignment="Top" Height="43" Width="252"/>
        <Button Content="Statistics" HorizontalAlignment="Center" Margin="0,272,0,0" VerticalAlignment="Top" Height="43" Width="252"/>
        <Button Content="Exit" HorizontalAlignment="Center" Margin="0,336,0,0" VerticalAlignment="Top" Height="43" Width="252"/>
