<Window x:Class="CardGame.Views.Statistics"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CardGame.Views"
        mc:Ignorable="d"
        Title="Statistics" Height="450" Width="800">
    <Grid>
        <Label x:Name="gamesPlayed" Content="Games Played:" HorizontalAlignment="Center" Margin="0,120,0,0" VerticalAlignment="Top" Width="416"/>
        <Label x:Name="gamesWon" Content="Games Won:" HorizontalAlignment="Center" Margin="0,160,0,0" VerticalAlignment="Top" Width="416"/>
        <Label Content="Statistics" HorizontalAlignment="Left" Margin="192,78,0,0" VerticalAlignment="Top"/>

    </Grid>
</Window>
