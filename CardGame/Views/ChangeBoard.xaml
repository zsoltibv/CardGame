        xmlns:local="clr-namespace:CardGame.Views"
        mc:Ignorable="d"
        Title="ChangeBoard" Height="450" Width="800">
    <Grid>
        <Button Content="Change Size" HorizontalAlignment="Left" Margin="68,240,0,0" VerticalAlignment="Top" Click="Button_Click" Width="212" RenderTransformOrigin="0.178,-0.434" Height="35"/>
        <TextBox HorizontalAlignment="Left" x:Name="rowCount" Margin="68,106,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="431" Height="32"/>
        <Label Content="Enter nr of rows:" HorizontalAlignment="Left" Margin="68,76,0,0" VerticalAlignment="Top" RenderTransformOrigin="-0.812,0.274" Height="25" Width="109"/>
        <TextBox HorizontalAlignment="Left" x:Name="colCount" Margin="68,184,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="431" Height="32"/>
        <Label Content="Enter nr of cols:" HorizontalAlignment="Left" Margin="68,154,0,0" VerticalAlignment="Top" RenderTransformOrigin="-0.812,0.274" Height="25" Width="109"/>

    </Grid>
</Window>
